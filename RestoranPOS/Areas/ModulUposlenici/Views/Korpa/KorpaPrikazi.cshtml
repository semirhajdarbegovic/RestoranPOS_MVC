@model List<RestoranPOS.Areas.ModulUposlenici.Models.UposlenikKorpaViewModel>
@using RestoranPOS.Areas.ModulOnlineKorisnici.Models
@using RestoranPOS.Areas.ModulUposlenici.Models
@using RestoranPOS.Models

<div class="container">

    <table class="table table-striped tabela-popravi-vrati container-margin-fix">
        <tr>
            <th>
                Naziv proizvoda
            </th>
            <th>
                Cijena proizvoda
            </th>
            <th>
                Kolicina
            </th>
            <th>
                Datum narudzbe
            </th>
        </tr>
        @foreach (UposlenikKorpaViewModel x in Model)
        {
            <tr>
                <td>
                    @x.Korpa.NazivProizvoda
                </td>
                <td>
                    @x.Korpa.CijenaProizvoda
                </td>
                <td>
                    @x.Korpa.Kolicina
                </td>
                <td>
                    @x.Korpa.DatumNarudzbe
                </td>
            </tr>
        }
    </table>
    <div class="ukupno-platiti">
        Ukupno za platiti : @ViewData["Ukupno"] KM
    </div>
    <div class="zakljuci-narudzbu">
        @Html.ActionLink("Zavrsi/Naruci", "ZakljuciNarudzbu", "Korpa", new {Area = "ModulUposlenici", stolId = Model[0].Korpa.StolID, korisnikId = Model[0].Korpa.KorisnikId}, new { @class = "btn btn-block btn-gold" })
    </div>

</div>
