@using RestoranPOS.Helper
@using RestoranPOS.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>

    <link href="~/Content/glavni-style.css" rel="stylesheet"/>


    <!-- Font-->
    <link href='http://fonts.googleapis.com/css?family=Herr+Von+Muellerhoff' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:700,300,600,400' rel='stylesheet' type='text/css'>
    <!-- Font-Awsome Ikone-->
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand logo" href="#"></a>
               
            </div>
            <div class="navbar-collapse collapse">
                <span class="navbar-btn navbar-right hidden-xs">
                   <span> Dobrodošli, </span> <a href="#">@Html.Partial("_LogiraniKorisnik")</a>
                </span>

                <ul class="nav navbar-nav navbar-left">
                    <li>
                        @Html.ActionLink("Naruči/Ponuda", "PrikaziPonudu", "Naruci", new { area = "ModulOnlineKorisnici" }, null)
                    </li>
                    <li>
                        @Html.ActionLink("Rezervisi Stol", "Kreiraj", "Rezervacija", new { area = "ModulRezervacija" }, null)
                    </li>
                </ul>


            </div>
        </div>
    </div>
    <div class="container-margin-fix">
        @RenderBody()

    </div>
    <!-- Footer-->
    <footer>
        <div class="container">
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 footer-sadrzaj-wrapper">
                <div class="footer-sadrzaj-naslov">
                    <h2>O restoranu</h2>
                </div>
                <div class="footer-sadrzaj-content">
                    <p>
                        HG Restaurant is a responsive, modern and easy to use WordPress theme that is perfect for any restaurant, bakery or coffee shop.
                    </p>
                </div>
            </div>
            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 footer-sadrzaj-wrapper">
                <div class="footer-sadrzaj-naslov">
                    <h2>Radno vrijeme</h2>
                </div>
                <div class="footer-sadrzaj-content">
                    <dl class="dl-horizontal">
                        <dt>Ponedjeljak</dt>
                        <dd>Odmaramo</dd>
                        <dt>Utorak</dt>
                        <dd>09:00 - 22:00</dd>
                        <dt>Srijeda</dt>
                        <dd>00:00 - 24:00</dd>
                        <dt>Četvrtak</dt>
                        <dd>12:00 - 22:00</dd>
                        <dt>Petak</dt>
                        <dd>12:00 - 22:00</dd>
                    </dl>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 footer-sadrzaj-wrapper">
                <div class="footer-sadrzaj-naslov">
                    <h2>Kontakt</h2>
                </div>
                <div class="footer-sadrzaj-content">
                    <address>
                        <i class="fa fa-home">
                        </i>Mostar, Bosna i Hercegovina<br>
                        <i class="fa fa-phone"></i>+1 222 33 44<br>
                        <i class="fa fa-envelope"></i>
                        <a href="#">restoran@edu.fit.ba</a><br><i class="fa fa-skype"></i>restorannPos<br>
                    </address>
                </div>
            </div>
        </div>
    </footer>
    <!-- Kraj Footer-->

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>