@using System.Web.Mvc.Html
@using RestoranPOS.Models
@model List<RestoranPOS.Models.Stol>

@{
    ViewBag.Title = "Prikazi";
}

<h2>Prikazi</h2>

 <div>
<h4>Stol</h4>
<hr />
<dl class="dl-horizontal"></dl>
<table class="table">
    <!--<thead>
    <tr>
        <th>id stol</th>
        <th>broj stola</th>
        <th>zauzet</th>
    </tr>
    </thead>-->
        @foreach (Stol s in Model)
        {
            if (s.Zauzet)
            {
                <td align="center">@Html.ActionLink(s.BrojStola.ToString(), "Prikazi", "", new {@class = "btn btn-lg btn-primary", style = "width: 125px; height: 100px; font-size: 25px; border-color: green; border-width: 2px;" })</td>
            }
            if (!s.Zauzet)
            {
                <td align="center">@Html.ActionLink(s.BrojStola.ToString(), "Prikazi", "", new {@class = "btn btn-lg btn-success", style = "width: 125px; height: 100px; font-size: 25px; border-color: blue; border-width: 2px;" })</td>
            }
            //<td>@s.Id<br />@s.BrojStola<br />@s.Zauzet</td>
            if (s.BrojStola % 8 == 0)
            {
                <tr></tr>
            }

        }
</table>
</div>
