@model RestoranPOS.Areas.ModulUposlenici.Models.UposleniciPromjeniLozinkuViewModel


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container container-margin-fix">
        <div class="uposlenik-korisnik-container col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="uposlenik-korisnik-container-opis">
                <p>
                    Promjeni lozinku
                </p>
            </div>
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    <label class="control-label col-md-2"> Stara lozinka</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Password, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.Password, "", new {@class = "text-danger"})
                        <span class="text-danger"> @ViewBag.Greska</span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2"> Nova lozinka</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NovaLozinka, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.NovaLozinka, "", new {@class = "text-danger"})
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2"> Ponovite lozinku</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PonoviLozinku, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.PonoviLozinku, "", new {@class = "text-danger"})
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Spasi" class="btn btn-block btn-gold"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
            }



            <script src="~/Scripts/jquery-1.10.2.min.js"></script>
            <script src="~/Scripts/jquery.validate.min.js"></script>
            <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
